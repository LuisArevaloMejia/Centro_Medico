    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreDiag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoDiag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observaciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fotografias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.medicamentos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaEmision)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CITA.estadoCita)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.codigoDiag }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codigoDiag }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.codigoDiag })
        </td>
    </tr>
}

</table>
