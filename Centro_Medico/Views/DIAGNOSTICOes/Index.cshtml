@model IEnumerable<Centro_Medico.Models.DIAGNOSTICO>

@{
    ViewBag.Title = "Diasnosticos";
}

<h2>Diagnosticos</h2>

<p>
    @Html.ActionLink("Nuevo Diagnostico", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreDiag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoDiag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observaciones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fotografias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.medicamentos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaEmision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITA.estadoCita)
        </th>
