@model IEnumerable<Centro_Medico.Models.MEDICO>

@{
    ViewBag.Title = "Medicos";
}

<h2>Medicos</h2>

<p>
    @Html.ActionLink("Nuevo Medico", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.estadoM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMPLEADO.nombresEmp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESPECIALIDAD.NombreEsp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.estadoM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPLEADO.nombresEmp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESPECIALIDAD.NombreEsp)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.codigoM }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codigoM }) |
