@model IEnumerable<Centro_Medico.Models.ESPECIALIDAD>

@{
    ViewBag.Title = "Especialidades";
}

<h2>Especialidades</h2>

<p>
    @Html.ActionLink("Nueva Especialidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.esatadoEsp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreEsp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripccionEsp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.esatadoEsp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreEsp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripccionEsp)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.codigoEsp }) |
